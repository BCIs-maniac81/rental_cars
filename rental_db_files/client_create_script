CREATE TABLE client (id SERIAL PRIMARY KEY NOT NULL, first_name VARCHAR(40) NOT NULL,
                     last_name VARCHAR(40) NOT NULL, birthday DATE NOT NULL, address_1 TEXT NOT NULL,
                    address_2 TEXT, address_3 TEXT, city VARCHAR(100) NOT NULL, zip_code VARCHAR(12) NOT NULL,
                     country VARCHAR(40) NOT NULL, email VARCHAR(255) NOT NULL, phone_number VARCHAR(40) NOT NULL,
                    password VARCHAR(32));
                    
